[Unit]
Description=Automated Probe Installation Trigger
After=local-fs.target
ConditionPathExists=/usr/local/bin/probe-install

[Service]
Type=oneshot
ExecStart=/bin/bash -c "if grep -q 'probe_install=auto' /proc/cmdline; then /usr/local/bin/probe-install --auto && reboot; fi"
StandardOutput=journal+console
StandardError=journal+console

[Install]
WantedBy=multi-user.target
